{% extends 'base.html.twig' %}

{% block title %}
Login
{% endblock %}

{% block body %}

    <form action="{{ path('app_login') }}" method="post">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-sm-6">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="username" class="form-label required">Email</label>
                            <input id="username" type="email" name="_username" class="form-control" required/>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label required">Password</label>
                            <input id="password" type="password" name="_password" class="form-control" required/>
                            <div class="text-end">
                                <a href="{{ path('password_reset') }}">Password dimanticata?</a>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="d-grid">
                            <button class="btn btn-primary btn-block" type="submit">Login</button>
                        </div>
                    </div>
                </div>
                <p class="text-center mt-3">
                    Nuovo su Babyjournal?
                </p>
                <div class="d-grid">
                    <a class="btn btn-outline-primary" href="{{ path('signup') }}">Iscriviti</a>
                </div>


            </div>

        </div>
    </form>
{% endblock %}
